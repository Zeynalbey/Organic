@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Organic.Areas.Client.ViewModels.OrderProducts
@model OrdersProductsViewModel

<!--Navigation section-->
<div class="container">
    <nav class="biolife-nav">
        <ul>
            <li class="nav-item"><a href="index-2.html" class="permal-link">Home</a></li>
            <li class="nav-item"><span class="current-page">ShoppingCart</span></li>
        </ul>
    </nav>
</div>

<div class="page-contain checkout">
    <!-- Main content -->
    <div id="main-content" class="main-content">
        <div class="container sm-margin-top-37px">
            <div class="row">
                <!--Order Summary-->
                <div class="col-xs-12 sm-padding-top-48px sm-margin-bottom-0 xs-margin-bottom-15px">
                    <div class="order-summary sm-margin-bottom-80px">
                        <div class="title-block">
                            <h3 class="title">Sifarişiniz</h3>
                        </div>
                        <div class="cart-list-box short-type">
                            <span class="number">@Model.Products!.Count məhsul</span>
                            <ul class="cart-list">
                                @foreach (var product in Model.Products!)
                                {
                                    <li class="cart-elem">
                                        <div class="cart-item">
                                            <div class="product-thumb">
                                                <a class="prd-thumb" href="#">
                                                    <figure><img src="~/@product.Image" width="113" height="113" alt="shop-cart"></figure>
                                                </a>
                                            </div>
                                            <div class="info">
                                                <span class="txt-quantity">@product.Quantity x</span>
                                                <a href="#" class="pr-name">@product.Name</a>
                                            </div>
                                            <div class="price price-contain">
                                                <ins><span class="price-amount">@product.Price ₼</span></ins>
                                            </div>
                                        </div>
                                    </li>
                                }
                                
                            </ul>
                            <ul class="subtotal">
                                <li>
                                    <div class="subtotal-line">
                                        <b class="stt-name">Yekun qiymət:</b>
                                        <span class="stt-price">

                                            @Math.Round(Model.Summary!.Total, 2) ₼

                                        </span>
                                    </div>
                                </li>
                                <li>
                                    <div class="Sifarisler">
                                        <form method="POST" asp-route="client-order-placeorder" id="submit-form"></form>
                                        <button form="submit-form" type="submit">Sifarişinizi təsdiqləyin</button>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>