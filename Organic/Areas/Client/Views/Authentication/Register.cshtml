@using Organic.Areas.Client.ViewModels.Authentication
@model RegisterViewModel

<div class="container">
    <nav class="biolife-nav">
        <ul>
            <li class="nav-item"><a href="index-2.html" class="permal-link">Ana Səhifə</a></li>
            <li class="nav-item"><span class="current-page">Qeydiyyat</span></li>
        </ul>
    </nav>
</div>

<div class="page-contain login-page">

    <!-- Main content -->
    <div id="main-content" class="main-content">
        <div class="container">
            <p class="text-danger">Qeydiyyatdan keçdikdən sonra emailə gələn məktubu təsdiqləyin.</p>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="signin-container">
                        <form method="post" asp-route="client-auth-register">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <p class="form-row">
                                <label for="LastName">Ad:<span class="requite">*</span></label>
                                <input asp-for="FirstName" class="txt-input">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </p>
                            <p class="form-row">
                                <label>Soyad:<span class="requite">*</span></label>
                                <input asp-for="LastName" type="text" id="fid-pass" value="" class="txt-input">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </p>
                            <p class="form-row">
                                <label>Email:<span class="requite">*</span></label>
                                <input asp-for="Email" type="email" id="fid-pass" name="email" value="" class="txt-input">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </p>
                            <p class="form-row">
                                <label>Şifrə:<span class="requite">*</span></label>
                                <input asp-for="Password" type="password" id="fid-pass" name="password" value="" class="txt-input">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </p>
                            <p class="form-row">
                                <label for="Password">Təkrar şifrə:<span class="requite">*</span></label>
                                <input asp-for="ConfirmPassword"  type="password" class="txt-input">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </p>

                            <p class="form-row wrap-btn">
                                <button class="btn btn-submit btn-bold" type="submit">Qeydiyyat</button>
                            </p>
                        </form>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>