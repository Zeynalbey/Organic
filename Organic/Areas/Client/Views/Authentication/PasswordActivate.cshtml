@using Organic.Areas.Client.ViewModels.Authentication
@model NewPasswordViewModel


<div class="hero-section hero-background">
    <h1 class="page-title">Kənd Məhsulları</h1>
</div>

<div class="page-contain login-page">

    <!-- Main content -->
    <div id="main-content" class="main-content">
        <div class="container">

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="signin-container">
                        <form method="post" asp-route="client-auth-password">

                            <p class="form-row">
                                <label>Yeni şifrə:<span class="requite">*</span></label>
                                <input asp-for="Password" type="password" id="fid-pass" name="password" value="" class="txt-input">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </p>
                            <p class="form-row">
                                <label for="Password">Təkrar şifrə:<span class="requite">*</span></label>
                                <input asp-for="ConfirmPassword" type="password" class="txt-input">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </p>

                            <p class="form-row wrap-btn">
                                <button class="btn btn-submit btn-bold" type="submit">Daxil et</button>
                            </p>
                        </form>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>


