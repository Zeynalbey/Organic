@using Organic.Areas.Admin.ViewModels.Product.Image
@model ImageViewModel

<div>
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-route="admin-product-list">Products</a>
                        </li><!--end nav-item-->
                        <li class="breadcrumb-item active">add image</li>
                    </ol>
                </div>
                <h4 class="page-title">Products</h4>
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div>
</div>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-product-image-add" asp-route-userId="@Model.ProductId"  target="_blank" class="btn btn-secondary">Add new user image</a>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="card bg-secondary rounded">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userImage in Model.Images!)
                        {
                            <tr>
                                <td><img src="~/@userImage.ImageUrL" width="20%" /></td>
                                <td class="text-end">
                                    <a asp-route="admin-product-image-update" asp-route-id="@userImage.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-product-image-delete" asp-route-productId="@Model.ProductId" asp-route-userImageId="@userImage.Id" id="product-image-form-@userImage.Id"></form>
                                    <button class="btn-danger" type="submit" form="product-image-form-@userImage.Id">
                                        delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>