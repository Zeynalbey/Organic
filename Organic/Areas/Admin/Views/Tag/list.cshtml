@using Organic.Areas.Admin.ViewModels.Product.Tag
@model List<TagViewModel>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Tags</h6>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Tag name</th>

                            <th scope="col">Add tag</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tag in Model)
                        {
                            <tr>
                                <td>@tag.Name</td>

                                <td>
                                    <a asp-route="admin-tag-add">add</a>
                                </td>
                                <td>
                                    <a class="text-warning" asp-route="admin-tag-update" asp-route-id="@tag.Id">edit</a>
                                </td>
                                <td>
                                    <form method="POST" asp-route="admin-tag-delete" asp-route-id="@tag.Id" id="update-@tag.Id">
                                    </form>
                                    <button class="btn btn-danger" type="submit" form="update-@tag.Id">delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>