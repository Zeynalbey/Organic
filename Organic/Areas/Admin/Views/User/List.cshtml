@using Organic.Areas.Admin.ViewModels.User
@model List<UserListViewModel>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Commands</h6>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">FirstName</th>
                            <th scope="col">LastName</th>
                            <th scope="col">Email</th>
                            <th scope="col">Role</th>
                            <th scope="col">Password</th>

                            <th scope="col">Add user image</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>@user.Password</td>


                                <td>
                                    <a asp-route="admin-user-image-list" asp-route-userId="@user.Id">image</a>
                                </td>

                                <td>
                                    <a class="text-warning" asp-route="admin-user-update" asp-route-id="@user.Id">edit</a>
                                </td>
                                <td>
                                    <form method="POST" asp-route="admin-user-delete" asp-route-id="@user.Id" id="update-@user.Id">
                                    </form>
                                    <button class="btn btn-danger" type="submit" form="update-@user.Id">delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>