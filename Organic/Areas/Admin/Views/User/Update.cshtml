@using Organic.Areas.Admin.ViewModels.User
@model UpdateViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="card bg-secondary rounded">
            <div class="card-header">
                <a asp-route="admin-user-list">Go to Users</a>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-user-update" asp-route-id="@Model.Id" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Firstname</label>
                            <input asp-for="FirstName" class="form-control">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>LastName</label>
                            <input asp-for="LastName" class="form-control">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Roles</label>
                            <select asp-for="RoleId" asp-items="@(new SelectList(Model.Roles, nameof(RoleListViewModel.Id), nameof(RoleListViewModel.Name)))" class="form-select">                            </select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary  mt-2">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>