@using Organic.Areas.Admin.ViewModels.Product.Category
@model List<CategoryViewModel>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Categories</h6>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Category name</th>
                            <th scope="col">Icon class</th>

                            <th scope="col">Add category</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>@category.IconClass</td>

                                <td>
                                    <a asp-route="admin-category-add">add</a>
                                </td>
                                <td>
                                    <a class="text-warning" asp-route="admin-category-update" asp-route-id="@category.Id">edit</a>
                                </td>
                                <td>
                                    <form method="POST" asp-route="admin-category-delete" asp-route-id="@category.Id" id="update-@category.Id">
                                    </form>
                                    <button class="btn btn-danger" type="submit" form="update-@category.Id">delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>